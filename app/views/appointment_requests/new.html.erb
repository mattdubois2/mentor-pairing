<h2>Sign up</h2>

<div class="panel">
	<p>With <%= link_to(@availability.mentor.name) %> on <%= display_availability(@availability) %></p>

	<%= form_tag appointment_requests_path(:availability_id => @availability) do %>
  	<p>Name <%= text_field_tag :first_name, params[:first_name] %><%= text_field_tag :last_name, params[:last_name] %></p>
  	<p>Twitter handle @<%= text_field_tag :twitter_handle, params[:twitter_handle] %>
    <% if @user %>
      <span class="error">
        <%= @user.errors[:twitter_handle].join(", ") %>
      </span>
    <% end %>
    </p>
  	<p>Email address <%= text_field_tag :email, params[:email] %>
    <% if @user %>
      <span class="error">
        <%= @user.errors[:email].join(", ") %>
      </span>
    <% end %>
    </p>
  	<input type="submit" />
	<% end %>
</div>
